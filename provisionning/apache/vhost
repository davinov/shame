<VirtualHost {{ interfaces|default('*') }}:{{ port|default('80') }}>
    ServerName {{ host }}

    DocumentRoot {{ docroot }}
    <Directory {{ docroot }}>
        Options -Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        allow from all
    </Directory>

    CustomLog ${APACHE_LOG_DIR}/access_{{ host }}.log combined
    ErrorLog ${APACHE_LOG_DIR}/error_{{ host }}.log
</VirtualHost>
